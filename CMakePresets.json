{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "telemetry",
            "displayName": "C Telemetry",
            "binaryDir": "${sourceDir}/scenarios/${presetName}/c/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "PRESET_PATH": "${sourceDir}/scenarios/${presetName}/c"
            }
        },
        {
            "name": "getting_started",
            "displayName": "C Getting Started",
            "binaryDir": "${sourceDir}/scenarios/${presetName}/c/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "PRESET_PATH": "${sourceDir}/scenarios/${presetName}/c"
            }
        },
        {
            "name": "tests",
            "displayName": "Extension Tests",
            "binaryDir": "${sourceDir}/mqttclients/c/tests/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "PRESET_PATH": "${sourceDir}/mqttclients/c/${presetName}",
                "ENABLE_UNIT_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "telemetry",
            "displayName": "C Telemetry",
            "configurePreset": "telemetry",
            "targets": [
                "telemetry_consumer",
                "telemetry_producer"
            ]
        },
        {
            "name": "getting_started",
            "displayName": "C Getting Started",
            "configurePreset": "getting_started",
            "targets": [
                "getting_started"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "extension_tests",
            "description": "",
            "displayName": "Extension Tests",
            "configurePreset": "tests",
            "output": {
                "verbosity": "verbose"
            }
        }
    ]
}
