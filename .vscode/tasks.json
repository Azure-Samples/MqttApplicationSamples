{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_getting_started",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/scenarios/getting_started/dotnet/getting_started/getting_started.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build_telemetry",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/scenarios/telemetry/dotnet/telemetry.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_command",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/scenarios/command/dotnet/command.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build C Getting Started",
            "type": "shell",
            "command": "cmake --preset=getting_started;cmake --build --preset=getting_started"
        },
        {
            "label": "Build C Telemetry",
            "type": "shell",
            "command": "cmake --preset=telemetry;cmake --build --preset=telemetry"
        },
        {
            "label": "Build C Command",
            "type": "shell",
            "command": "cmake --preset=command;cmake --build --preset=command"
        },
        {
            "label": "build_ts_getting_started",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/scenarios/getting_started/TypeScript"
            },
            "command": "node ./node_modules/.bin/tsc -p .",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "build_ts_telemetry",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/scenarios/telemetry/TypeScript"
            },
            "command": "node ./node_modules/.bin/tsc -p .",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "build_ts_commands",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/scenarios/commands/TypeScript"
            },
            "command": "node ./node_modules/.bin/tsc -p .",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        }
    ]
}