{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_getting_started",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/getting_started/dotnet/getting_started/getting_started.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build_telemetry",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/scenarios/telemetry/dotnet/telemetry.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_command",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/scenarios/command/dotnet/command.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}